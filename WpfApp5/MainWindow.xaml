<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="Генератор дежурных">
    <Grid>
        <StackPanel Margin="15">
        <ListBox Name="StudentList">
            <ListBoxItem>Первый дежурный</ListBoxItem>
            <ListBoxItem>Второй дежурный</ListBoxItem>
            <ListBoxItem>Третий дежурный</ListBoxItem>
        </ListBox>
        <StackPanel Margin="0 5 0 0" Orientation="Horizontal">
            <Button Name="BtnGenerate" Click="BtnGenerate_OnClick" Padding="5" Margin="0 0 5 0" Background="Khaki">Сгенерировать</Button>
            <Button Name="BtnClear" Click="BtnClear_OnClick" Padding="5" Background="Khaki">Очистить список</Button>
        </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
